@model Core.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Novo produto";
}
<h2>Cadastrar novo produto</h2>
<h4>Preencha os campos corretamente</h4>
<hr />
@{
    
    var categories = ViewBag.CategoryId as SelectList;
}

@if (categories == null || !categories.Any())
{
    <div class="alert alert-warning">
        Não há categorias cadastradas.  
        <a asp-area="" asp-controller="Categories" asp-action="Create">Crie uma categoria</a> para criar um produto.
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UploadImage" class="control-label"></label>
                    <input asp-for="UploadImage" class="form-control"/>
                    <span asp-validation-for="UploadImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="control-label"></label>
                    <input asp-for="Stock" class="form-control"/>
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-info"/>
                    <a asp-action="Index" class="btn btn-warning">Voltar</a>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/overrideValidationMethods.js"></script>
}

